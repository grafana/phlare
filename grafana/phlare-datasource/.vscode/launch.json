  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug backend plugin",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "port": 3222,
      "preLaunchTask": "debug",
      "host": "127.0.0.1",
      "showLog": true,
      "remotePath": "${workspaceFolder}",
      "dlvLoadConfig": {
        "followPointers": true,
        "maxVariableRecurse": 1,
        "maxStringLen": 1000,
        "maxArrayValues": 1000,
        "maxStructFields": -1
      }
    }
  ]
}
