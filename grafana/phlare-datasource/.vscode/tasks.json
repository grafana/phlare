{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "./.vscode/scripts/debug-build.sh",
      "presentation": {
        "panel": "shared"
      }
    },
    {
      "label": "debug",
      "dependsOn": ["build"],
      "command": "./.vscode/scripts/debug-attach.sh",
      "isBackground": true,
      "promptOnClose": false,
      "presentation": {
        "panel": "shared"
      },
      // this is a hack so the debugger will launch after the delve listen command
      // VS code will give a problem warning - you can ignore it and disable the prompt
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "API",
            "endsPattern": "."
          }
        }
      ]
    }
  ]
}
